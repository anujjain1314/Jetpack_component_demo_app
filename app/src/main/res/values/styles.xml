<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Basic styling for the buttons. -->
    <style name="outline_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/button_title</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="button_title" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>



    <!-- Basic styling for the textViews. -->
    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/headingTextColor</item>
    </style>

    <style name="subTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/subHeadingTextColor</item>
    </style>

    <style name="heading">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/row_heading</item>
    </style>

    <style name="sub_heading">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/row_sub_heading</item>
    </style>


</resources>